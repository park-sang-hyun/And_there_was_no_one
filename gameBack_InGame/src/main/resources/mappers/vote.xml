<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
                        
<mapper namespace="vote_mapper"> <!-- mybatis는 namespace필수!! -->
    <insert id="insertVote">
		insert into vote values (#{vd.room_id}, #{vd.who})
    </insert>
	
	<select id="selectVote">
		select room_id, who from vote where room_id = #{room_id}
    </select>
	
	<delete id="deleteVote">
		delete from vote where room_id=#{room_id}    
    </delete>
	
</mapper>